<div>
  <h1>Sign In</h1>
</div>
<div>
  <%= form_tag(auth_chef_callback_path, :method => :post, 'data-abide' => '') do %>
    <div class="row">
      <div class="medium-6 columns username-field">
        <%= label_tag :username %>
        <%= text_field_tag :username, nil, :autofocus => true, :required => true %>
        <small class="error">Required</small>
      </div>
    </div>
    <div class="row">
      <div class="medium-6 columns password-field">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, :required => true %>
        <small class="error">Required</small>
      </div>
    </div>
    <div class="row">
      <div class="medium-6 columns">
        <%= submit_tag "Sign In", class: "button" %>
      </div>
    </div>
    <div class="row">
      <div class="medium-6 columns">
        <%= link_to "Forgot your password?", new_password_reset_path %>
      </div>
    </div>
  <% end %>
</div>
