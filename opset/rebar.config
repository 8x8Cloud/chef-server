%% -*- mode: erlang; -*-

{require_otp_vsn, "R1[45]B.*"}.

{deps,
 [{gproc, ".*",
   {git, "https://github.com/uwiger/gproc.git",
    {tag, "v0.2.10"}}},
  {covertool, ".*",
   {git, "https://github.com/opscode/covertool.git",
    {branch, "master"}}}
 ]}.

{plugins, [rebar_covertool]}.

{erl_opts,
 [debug_info,
  warnings_as_errors]}.

{xref_checks,
 [exports_not_used,
  undefined_function_calls]}.

{eunit_opts,
 [verbose,
  {report,{eunit_surefire,[{dir,"."}]}}]}.
{cover_enabled, true}.
{covertool_eunit, "coverage.xml"}.
{covertool_prefix_len, 2}.
