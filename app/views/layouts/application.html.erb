<!DOCTYPE html>
<html>
<head>
  <title>Chef Identity Service</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="navbar navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <%= link_to root_path, :id => "logo", :class => "navbar-brand logo" do %>
          <%= image_tag 'logo.svg' %>
        <% end %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            <li><a>Signed in as: <%= current_user.username %></a></li>
            <li><%= link_to "Sign Out", signout_path, method: "delete" %></li>
          <% elsif controller.controller_name == 'sessions' %>
            <li><%= link_to "Sign Up", sign_up_url, :target => "_blank" %></li>
          <% else %>
            <li><%= link_to "Sign In", signin_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </header>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert <%= bootstrap_class_for(key) %>">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= value %>
      </div>
    <% end %>
    <%= yield %>
    <footer>
      &copy; <%= Time.now.strftime('%Y') %> Chef Software, Inc.
    </footer>
  </div>
  <script>
    $(document).chef({
      assets: {
        images: '<%= Rails.application.config.assets.prefix %>'
      }
    });
  </script>
</body>
</html>
