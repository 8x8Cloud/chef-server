<h1>Please Sign In</h1>
<%= form_tag(auth_chef_callback_path, :method => :post) do %>
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, nil, :class => 'form-control', :autofocus => true %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'form-control' %>
  </div>
  <%= submit_tag "Sign In", class: "btn btn-large btn-primary" %>
<% end %>
